<Window x:Class="OpenCVSharp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenCVSharp"
        mc:Ignorable="d"
        Title="Window1" Height="1280" Width="720">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Name="imgViewport" Width="1280" Height="720" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Name="btPlay" Click="Play_Click" Content="Play" Width="100" Height="50" Margin="16" />
                <Button Name="btStop" Click="Stop_Click" Content="Stop" Width="100" Height="50" Margin="16" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
